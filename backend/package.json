{
  "name": "shiv-accounts-backend",
  "version": "1.0.0",
  "description": "Cloud-based accounting system backend - Shiv Accounts Pro",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:endpoints": "cross-env NODE_ENV=test jest tests/endpoints/",
    "test:auth": "cross-env NODE_ENV=test jest tests/endpoints/auth.test.js",
    "test:contacts": "cross-env NODE_ENV=test jest tests/endpoints/contacts.test.js",
    "test:products": "cross-env NODE_ENV=test jest tests/endpoints/products.test.js",
    "test:categories": "cross-env NODE_ENV=test jest tests/endpoints/productCategories.test.js",
    "test:basic": "cross-env NODE_ENV=test jest tests/endpoints/basic.test.js",
    "test:health": "cross-env NODE_ENV=test jest tests/endpoints/health.test.js",
    "test:setup": "npm run db:test:create && npm run db:test:migrate",
    "db:test:create": "cross-env NODE_ENV=test npx sequelize-cli db:create",
    "db:test:migrate": "cross-env NODE_ENV=test npx sequelize-cli db:migrate",
    "db:test:drop": "cross-env NODE_ENV=test npx sequelize-cli db:drop",
    "db:test:reset": "npm run db:test:drop && npm run db:test:create && npm run db:test:migrate",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.11",
    "sequelize": "^6.35.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "accounting",
    "erp",
    "cloud",
    "nodejs",
    "express",
    "mysql",
    "multi-tenant"
  ],
  "author": "Shiv Accounts Pro Team",
  "license": "MIT"
}
